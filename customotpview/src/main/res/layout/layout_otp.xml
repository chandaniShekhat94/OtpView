<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llMain">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Please enter otp to verify your phone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/ov_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="+91 9999999999"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:textColor="@color/ov_black" />

    <FrameLayout
        android:id="@+id/llOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal" />

    <com.customotpview.CountDownTextView
        android:id="@+id/tvTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:textColor="@color/ov_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/ov_rounded_white_bg"
        android:text="@string/ov_resend"
        android:textColor="@color/ov_black"
        android:padding="@dimen/_12sdp"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ov_verify"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:textColor="@color/ov_black"
        android:paddingStart="@dimen/_32sdp"
        android:paddingEnd="@dimen/_32sdp"
        android:textSize="@dimen/_14ssp"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:background="@color/ov_colorGray"
        android:textAllCaps="true" />

</LinearLayout>

